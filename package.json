{
    "name": "personal-website",
    "version": "1.0.0",
    "license": "MIT",
    "description": "Personal Website Application",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --prod",
        "test": "jest",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "test:watch": "jest --watch"
    },
    "author": {
        "name": "Jacob",
        "email": "jacob.schulzetenberg@gmail.com",
        "url": "http://www.schulzetenberg.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/schulzetenberg/nodejs-website.git"
    },
    "dependencies": {
        "@angular/animations": "9.0.2",
        "@angular/common": "9.0.2",
        "@angular/compiler": "9.0.2",
        "@angular/core": "9.0.2",
        "@angular/forms": "9.0.2",
        "@angular/http": "7.2.16",
        "@angular/platform-browser": "9.0.2",
        "@angular/platform-browser-dynamic": "9.0.2",
        "@angular/router": "9.0.2",
        "@types/chart.js": "2.9.14",
        "@types/lodash": "4.14.149",
        "angular5-csv": "0.2.11",
        "bootstrap": "4.4.1",
        "chart.js": "2.9.3",
        "core-js": "3.6.4",
        "d3": "5.15.0",
        "flexslider": "2.7.2",
        "hammerjs": "2.0.8",
        "jquery": "3.4.1",
        "lodash": "4.17.15",
        "moment": "2.24.0",
        "ng2-google-charts": "5.0.0",
        "q": "1.5.1",
        "rxjs": "6.5.4",
        "rxjs-compat": "6.5.4",
        "twitter-fetcher": "18.0.4",
        "zone.js": "0.10.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "0.900.3",
        "@angular/cli": "9.0.3",
        "@angular/compiler-cli": "9.0.2",
        "@angular/language-service": "9.0.2",
        "@types/bootstrap": "4.3.2",
        "@types/jasmine": "3.5.6",
        "@types/jasminewd2": "2.0.8",
        "@types/jest": "25.1.3",
        "@types/jquery": "3.3.38",
        "@types/node": "13.7.4",
        "codelyzer": "5.2.1",
        "cypress": "4.0.2",
        "htmlhint": "0.11.0",
        "husky": "4.2.3",
        "jasmine-core": "3.5.0",
        "jasmine-spec-reporter": "4.2.1",
        "jest": "25.1.0",
        "jest-preset-angular": "8.0.0",
        "js-beautify": "1.10.3",
        "lint-staged": "10.0.7",
        "prettier": "1.19.1",
        "protractor": "5.4.3",
        "stylelint": "13.2.0",
        "stylelint-config-prettier": "8.0.1",
        "stylelint-config-standard": "20.0.0",
        "ts-node": "8.6.2",
        "tslint": "6.0.0",
        "tslint-angular": "3.0.2",
        "tslint-config-airbnb": "5.11.2",
        "tslint-config-prettier": "1.18.0",
        "tslint-loader": "3.5.4",
        "typescript": "3.7.5"
    },
    "lint-staged": {
        "*.ts": [
            "tslint --project tsconfig.json -e 'src/test/**'",
            "git add"
        ],
        "*.html": [
            "htmlhint --config .htmlhintrc",
            "js-beautify --config .jsbeautifyrc --type html -r",
            "git add"
        ],
        "*.scss": [
            "stylelint --syntax=scss"
        ],
        "src/**/*.{ts,css,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    },
    "jest": {
        "preset": "jest-preset-angular",
        "roots": [
            "src"
        ],
        "transform": {
            "^.+\\.(ts|js|html)$": "ts-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/setup-jest.ts"
        ],
        "moduleNameMapper": {
            "@app/(.*)": "<rootDir>/src/app/$1",
            "@assets/(.*)": "<rootDir>/src/assets/$1",
            "@core/(.*)": "<rootDir>/src/app/core/$1",
            "@env": "<rootDir>/src/environments/environment",
            "@src/(.*)": "<rootDir>/src/src/$1",
            "@state/(.*)": "<rootDir>/src/app/state/$1"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/src/tsconfig.spec.json",
                "stringifyContentPathRegex": "\\.html$",
                "astTransformers": [
                    "jest-preset-angular/build/InlineFilesTransformer",
                    "jest-preset-angular/build/StripStylesTransformer"
                ]
            }
        }
    }
}
